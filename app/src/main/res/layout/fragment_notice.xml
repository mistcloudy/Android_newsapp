<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notice">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/noticelay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".notice">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="메모장"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@id/noticelay"
        app:layout_constraintBottom_toBottomOf="@+id/InputRecord2"
    android:id="@+id/InputRecord"
        />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="인기 검색어"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="@+id/InputRecord"
            app:layout_constraintBottom_toBottomOf="@+id/InputRecord3"
            android:id="@+id/InputRecord2"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사용 시간"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="@+id/InputRecord2"
            app:layout_constraintBottom_toBottomOf="@+id/InputRecord4"
            android:id="@+id/InputRecord3"
            />
        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="한영 번역"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="@+id/InputRecord3"
            app:layout_constraintBottom_toBottomOf="@+id/InputRecord6"
            android:id="@+id/InputRecord4"
            />
        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="영한 번역"
            android:layout_marginLeft="20dp"
            app:layout_constraintEnd_toEndOf="@id/InputRecord3"
            app:layout_constraintStart_toEndOf="@+id/InputRecord4"
            app:layout_constraintTop_toTopOf="@+id/InputRecord3"
            app:layout_constraintBottom_toBottomOf="@+id/InputRecord6"
            android:id="@+id/InputRecord5"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="유튜브 검색"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="@+id/InputRecord5"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/InputRecord6"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>